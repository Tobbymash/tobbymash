    <script>
        // Default login credentials
        const defaultUsername = "tobbymash";
        const defaultPassword = "37812883Tm.";

        // Get modal elements
        var appointmentModal = document.getElementById("appointmentModal");
        var loginModal = document.getElementById("loginModal");
        var adminModal = document.getElementById("adminModal");
        var bookAppointmentBtn = document.getElementById("bookAppointmentBtn");
        var loginBtn = document.getElementById("loginBtn");
        var closeAppointmentModal = document.getElementById("closeAppointmentModal");
        var closeLoginModal = document.getElementById("closeLoginModal");
        var closeAdminModal = document.getElementById("closeAdminModal");

        // Open appointment modal
        bookAppointmentBtn.onclick = function() {
            appointmentModal.style.display = "block";
        }

        // Open login modal
        loginBtn.onclick = function() {
            loginModal.style.display = "block";
        }

        // Close appointment modal
        closeAppointmentModal.onclick = function() {
            appointmentModal.style.display = "none";
        }

        // Close login modal
        closeLoginModal.onclick = function() {
            loginModal.style.display = "none";
        }

        // Close admin modal
        closeAdminModal.onclick = function() {
            adminModal.style.display = "none";
        }

        // Close modal on outside click
        window.onclick = function(event) {
            if (event.target == appointmentModal) {
                appointmentModal.style.display = "none";
            }
            if (event.target == loginModal) {
                loginModal.style.display = "none";
            }
            if (event.target == adminModal) {
                adminModal.style.display = "none";
            }
        }

        // Handle appointment form submission
        document.getElementById('appointmentForm').onsubmit = function(event) {
            event.preventDefault(); // Prevent default form submission
            alert('Appointment booked!'); // Alert for demonstration
            appointmentModal.style.display = "none"; // Close the modal after submission
        }

        // Handle login form submission
        document.getElementById('loginForm').onsubmit = function(event) {
            event.preventDefault(); // Prevent default form submission
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;

            // Check credentials
            if (username === defaultUsername && password === defaultPassword) {
                alert('Login successful!'); // Alert for demonstration
                loginModal.style.display = "none"; // Close the modal after successful login
                adminModal.style.display = "block"; // Open the admin modal
                document.getElementById('aboutEdit').value = document.getElementById('about-description').innerText;
                document.getElementById('serviceEdit').value = document.getElementById('service-description').innerText;
            } else {
                alert('Invalid username or password.'); // Alert for incorrect credentials
            }
        }

        // Save changes for About Us
        document.getElementById('saveAboutBtn').onclick = function() {
            const newAboutText = document.getElementById('aboutEdit').value;
            document.getElementById('about-description').innerText = newAboutText;
            alert('About Us updated successfully!');
        }

        // Save changes for Services Offered
        document.getElementById('saveServiceBtn').onclick = function() {
            const newServiceText = document.getElementById('serviceEdit').value;
            document.getElementById('service-description').innerText = newServiceText;
            alert('Services updated successfully!');
        }

        // Post an event
        document.getElementById('postEventBtn').onclick = function() {
            const eventText = document.getElementById('eventPost').value;
            const eventsList = document.getElementById('eventsList');
            const eventItem = document.createElement('div');
            eventItem.innerText = eventText;
            eventsList.appendChild(eventItem);
            document.getElementById('eventPost').value = ''; // Clear textarea
            alert('Event posted successfully!');
        }
    </script>
</body>
</html>
